<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entities.Books" table="db_table">
        <id name="id" type="long" column="id"/>
        <property name="title" type="string" column="title"/>
        <property name="numberOfPages" type="integer" column="number_of_pages"/>
        <property name="hasHardCover" type="boolean" column="has_hard_cover"/>
        <property name="releaseDate" type="date" column="release_date"/>
    </class>
</hibernate-mapping>